{
  "rewrites": [
    { "source": "/api/auth-action", "destination": "/api/auth-action.ts" },
    { "source": "/api/admins", "destination": "/api/admins.js" },
    { "source": "/api/lojas", "destination": "/api/lojas.js" },
    { "source": "/api/lojista", "destination": "/api/lojista.js" },
    { "source": "/api/settings", "destination": "/api/settings.js" },
    { "source": "/api/create-pix", "destination": "/api/create-pix.js" },
    { "source": "/api/tracking-webhook", "destination": "/api/tracking-webhook.js" },
    { "source": "/api/products", "destination": "/api/products.ts" },
    { "source": "/api/categorias", "destination": "/api/categorias.js" },
    { "source": "/api/pedidos", "destination": "/api/pedidos.js" },
    { "source": "/api/loja-extras", "destination": "/api/loja-extras.js" },
    { "source": "/api/cliente-auth", "destination": "/api/cliente-auth.js" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/loja-extras?scope=cron-taxas",
      "schedule": "0 3 * * *"
    }
  ]
}
